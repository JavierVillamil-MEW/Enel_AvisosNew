<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="drupal_project">
  <description>PHP CodeSniffer configuration for Drupal projects.</description>
  <file>web/modules/custom</file>
  <file>web/themes/custom</file>
  <arg name="extensions" value="php,module,inc,install,test,profile,theme,twig"/>
  <arg name="ignore" value="gnorm,node_modules"/>

  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>
</ruleset>
